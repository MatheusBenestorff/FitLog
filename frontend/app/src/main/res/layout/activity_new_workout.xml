<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001f3d"
    tools:context=".activities.NewWorkoutActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:background="#011629">

        <TextView
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Criar Workout"
            android:textColor="#e15905"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnSalvar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editNomeWorkout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nome do Workout"
        android:textColor="#FFFFFF"
        android:textColorHint="#A0A0A0"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        android:paddingBottom="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="textCapWords"
        android:maxLines="1"/>

    <View
        android:id="@+id/lineBelowEditText"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#888888"
        app:layout_constraintTop_toBottomOf="@id/editNomeWorkout"
        app:layout_constraintStart_toStartOf="@id/editNomeWorkout"
        app:layout_constraintEnd_toEndOf="@id/editNomeWorkout"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/imgIcone"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/workout_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineBelowEditText"
        android:layout_marginTop="20dp"
        android:contentDescription="Ícone do workout"/>

    <TextView
        android:id="@+id/textOrientacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adicione exercícios ao seu Workout"
        android:textColor="#e15905"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgIcone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSelectedExercises"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgIcone"
        app:layout_constraintBottom_toTopOf="@id/btnAdicionarExercicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        tools:listitem="@layout/item_selected_exercise_display"/>

    <Button
        android:id="@+id/btnAdicionarExercicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+  Adicionar exercício"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#e15905"
        android:textColor="#FFFFFF"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
