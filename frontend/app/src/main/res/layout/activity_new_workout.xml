<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001f3d">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:background="#011629">

        <TextView
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Criar Workout"
            android:textColor="#e15905"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editNomeWorkout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nome do Workout"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/imgIcone"
        android:layout_width="212dp"
        android:layout_height="158dp"
        android:src="@drawable/workout_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editNomeWorkout" />

    <TextView
        android:id="@+id/textOrientacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicione exercícios ao seu Workout"
        android:textColor="#888888"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgIcone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnAdicionarExercicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+  Adicionar exercício"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#e15905"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/textOrientacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
